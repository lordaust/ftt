.section-block
.text-center
  h2 Rating: #{player_skill}
// Progress Bar
h3.heading-xs.no-top-space
  | Goalkeeper
  span.pull-right 12%
.progress.progress-u.progress-xxs
  .progress-bar.progress-bar-u(style='width: 12%', aria-valuemax='100', aria-valuemin='0', aria-valuenow='12', role='progressbar')
h3.heading-xs.no-top-space
  | Defender
  span.pull-right 31%
.progress.progress-u.progress-xxs
  .progress-bar.progress-bar-u(style='width: 31%', aria-valuemax='100', aria-valuemin='0', aria-valuenow='31', role='progressbar')
h3.heading-xs.no-top-space
  | Midfielder
  span.pull-right 64%
.progress.progress-u.progress-xxs
  .progress-bar.progress-bar-u(style='width: 64%', aria-valuemax='100', aria-valuemin='0', aria-valuenow='64', role='progressbar')
h3.heading-xs.no-top-space
  | Attacker
  span.pull-right 88%
.progress.progress-u.progress-xxs
  .progress-bar.progress-bar-u(style='width: 88%', aria-valuemax='100', aria-valuemin='0', aria-valuenow='88', role='progressbar')
// End Progress Bar
.clearfix
